<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/workout_fragment">

    <fragment
        android:id="@+id/workout_fragment"
        android:name="com.chandl34.workoutexample.ui.fragment.WorkoutFragment"
        tools:layout="@layout/fragment_workout">
        <argument
            android:name="workout"
            android:defaultValue="@null"
            app:argType="com.chandl34.workoutexample.data.domain.Workout"
            app:nullable="true" />
        <action
            android:id="@+id/action_workout_fragment_to_workout_edit_fragment"
            app:destination="@id/workout_edit_fragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/workout_edit_fragment"
        android:name="com.chandl34.workoutexample.ui.fragment.WorkoutEditFragment"
        tools:layout="@layout/fragment_workout_edit">
        <argument
            android:name="workout"
            app:argType="com.chandl34.workoutexample.data.domain.Workout" />
        <action
            android:id="@+id/action_workout_edit_fragment_to_workout_step_edit_fragment"
            app:destination="@id/workout_step_edit_fragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_workout_edit_fragment_to_workout_fragment"
            app:destination="@id/workout_fragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:launchSingleTop="false"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/workout_fragment"
            app:popUpToInclusive="true" />
    </fragment>

    <dialog
        android:id="@+id/workout_step_edit_fragment"
        android:name="com.chandl34.workoutexample.ui.fragment.WorkoutStepEditFragment"
        tools:layout="@layout/fragment_workout_step_edit" />

</navigation>