<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.chandl34.workoutexample.viewmodel.WorkoutStepEditViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.fragment.WorkoutStepEditFragment">

        <Spinner
            android:id="@+id/type_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_large_margin"
            android:minHeight="@dimen/button_min_height"
            app:layout_constraintBottom_toTopOf="@id/duration_slider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@color/light_gray" />

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/duration_slider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_large_margin"
            android:minHeight="@dimen/button_min_height"
            android:stepSize="1"
            android:valueFrom="@integer/min_workout_step_duration"
            android:valueTo="@integer/max_workout_step_duration"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/type_spinner" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>